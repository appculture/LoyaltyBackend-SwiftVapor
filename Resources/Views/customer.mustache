{{>header}}
<div class="container">

    <div class="jumbotron">
        <h1>{{ first }} {{ last }}</h1>
        <p class="lead">{{ email }}</p>
        <p><a class="btn btn-lg btn-success" href="#" role="button">Make Purchase</a></p>
    </div>

    <table class="table table-striped table-hover">
        <tr>
            <th>ID</th>
            <th>Timestamp</th>
            <th>Amount</th>
        </tr>
        {{# purchases }}
        <tr class='clickable-row' data-href='purchases/{{ id }}'>
            <td>{{ id }}</td>
            <td>{{ timestamp }}</td>
            <td>{{ amount }}</td>
        </tr>
        {{/ purchases }}
    </table>

</div> <!-- /container -->
{{>footer}}
