{{>header}}
<div class="container">

	<!-- Customer Info -->
    <div class="jumbotron">
        <h2>{{ first }} {{ last }}</h2>
        <p class="lead">{{ email }}</p>
        <p><a class="btn btn-lg btn-success" data-toggle="modal" data-target="#purchaseModal">Make Purchase</a></p>
    </div>

	<!-- Customer Purchases -->
	<h3>Purchases</h3>
    <table class="table table-striped table-hover">
        <tr>
            <th>ID</th>
            <th>Timestamp</th>
            <th>Amount</th>
        </tr>
        {{# purchases }}
        <tr class='clickable-row' data-href='../purchases/{{ id }}'>
            <td>{{ purchase_id }}</td>
            <td>{{ timestamp }}</td>
            <td>{{ amount }}</td>
        </tr>
        {{/ purchases }}
    </table>

    <!-- Customer Vouchers -->
    <h3>Vouchers</h3>
    <table class="table table-striped table-hover">
        <tr>
            <th>ID</th>
            <th>Timestamp</th>
            <th>Expiration</th>
            <th>Value</th>
            <th>Redeemed</th>
            <th>Expired</th>
        </tr>
        {{# vouchers }}
        <tr class='clickable-row' data-href='../vouchers/{{ id }}'>
            <td>{{ voucher_id }}</td>
            <td>{{ timestamp }}</td>
            <td>{{ expiration }}</td>
            <td>{{ value }}</td>
            <td>{{ redeemed }}</td>
            <td>{{ expired }}</td>
        </tr>
        {{/ vouchers }}
    </table>

    <!-- Modal -->
    <div class="modal fade" id="purchaseModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Make purchase for {{ first }} {{ last }}</h4>
        </div>

        <div class="modal-body">
            <form id="purchaseForm" action="/purchases" method="post">
            	<input type="hidden" name="customer_id" value="{{ customer_id }}">

                <div class="form-group">
                    <label for="purchaseAmount">Purchase Amount</label>
                    <input type="number" class="form-control numberField" id="purchaseAmount" name="amount" placeholder="0.0">
                </div>

			    <!-- Customer Vouchers -->
			    <label for="vouchersTable">Valid Vouchers</label>
			    <table id="vouchersTable" class="table table-striped table-hover">
			        <tr>
			        	<th>Redeem</th>
			            <th>ID</th>
			            <th>Expiration</th>
			            <th>Value</th>
			        </tr>
			        {{# vouchers }}
			        <tr class='selectable-row'>
			        	<td><input type="checkbox" name="voucher_ids[]" value="{{ voucher_id }}"></td>
			            <td>{{ voucher_id }}</td>
			            <td>{{ expiration }}</td>
			            <td>{{ value }}</td>
			        </tr>
			        {{/ vouchers }}
			    </table>

            </form>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary btn-success" onclick="document.getElementById('purchaseForm').submit();">
            	Make Purchase
            </button>
        </div>
    </div>
    </div>
    </div>

</div> <!-- /container -->
{{>footer}}
